<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.bureau.nocomment.exporizon.activity.HomeActivity">

    <TextView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="status bar"
        android:textColor="@color/colorStatusBar"/>

    <EditText
        android:id="@+id/item_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line1"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="96sp"
        android:text="21">
    </EditText>

    <LinearLayout
        android:id="@+id/click_blocker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line1"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line2" >

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="1"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="2"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="3"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line3">

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="4"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="5"
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="6"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line4">

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="7"
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="8"
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="9"
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.bureau.nocomment.exporizon.view.KeyboardImageButton
            android:id="@+id/buttonBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tint="@color/colorKeyboard"
            android:src="@android:drawable/ic_input_delete" />

        <com.bureau.nocomment.exporizon.view.KeyboardButton
            android:text="0"
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <com.bureau.nocomment.exporizon.view.KeyboardImageButton
            android:id="@+id/buttonOK"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tint="@color/colorKeyboard"
            android:src="@android:drawable/ic_menu_view"/>
    </LinearLayout>

</RelativeLayout>
